datasource db {
    provider = "sqlite"
    url      = "file:./dev.sqlite3"
}

generator client {
    provider = "prisma-client-js"
}

model Zoo {
    id  String  @id @default(cuid())
    land    String
    stadt   String
    adresse String
    baujahr Int
    abteilungen Abteilung[]
}

model Abteilung {
    id  String  @id @default(cuid())
    name    String
    zoo Zoo @relation(fields: [zooId], references: [id])
    zooId   String
    mitarbeiter Mitarbeiter[]
    tiere   Tier[]
}

model Tier {
    id  String  @id @default(cuid())
    name    String
    art String
    abteilung   Abteilung @relation(fields: [abteilungId], references: [id])
    abteilungId String
}

model Mitarbeiter {
    id  String  @id @default(cuid())
    name    String
    abteilungen   Abteilung[]
    abteilungId String
}